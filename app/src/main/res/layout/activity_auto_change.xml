<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_black"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    tools:context=".nav_fragments.autochange.AutoChangeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/back_aerrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/inriasansbold"
            android:gravity="center"
            android:text="Auto Change Wallpaper"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Time Interval"
        android:layout_marginVertical="20dp"
        android:textSize="16dp"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <TextView
            android:layout_weight="1"
            android:id="@+id/t1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/round_time_blue"
            android:gravity="center"
            android:text="5M"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/t2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/round_time_grey"
            android:gravity="center"
            android:text="10M"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/t3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/round_time_grey"
            android:gravity="center"
            android:text="15M"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/t4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/round_time_grey"
            android:gravity="center"
            android:text="30M"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/t5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/round_time_grey"
            android:gravity="center"
            android:text="1H"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/t6"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/round_time_grey"
            android:gravity="center"
            android:text="2H"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/t7"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/round_time_grey"
            android:gravity="center"
            android:text="6H"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/t8"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/round_time_grey"
            android:gravity="center"
            android:text="12H"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enable Auto Wallpaper"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/switch1"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvApplyNow"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_time_blue"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Apply Now"
        android:textColor="@color/white"
        android:textSize="20dp" />


</LinearLayout>