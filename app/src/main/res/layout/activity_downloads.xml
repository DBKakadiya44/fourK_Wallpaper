<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/main_bg_black"
    android:paddingHorizontal="20dp"
    tools:context=".nav_fragments.downloads.DownloadsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/back_aerrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inriasansbold"
            android:text="My Downloads"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_gravity="center"/>


    </LinearLayout>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:text="No Download data....."
       android:gravity="center"
       android:textSize="25dp"
       android:textColor="@color/white"/>

</LinearLayout>